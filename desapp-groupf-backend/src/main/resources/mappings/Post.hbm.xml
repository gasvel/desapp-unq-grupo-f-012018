<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
                                   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
	default-cascade="save-update">
	<class name="model.Post">
		<id column="ID" name="id">
			<generator class="increment" />
		</id>
		<property name="title" />
		<property name="availability" />
		<property name="priceDay" />
		<property name="priceHour" />
		<property name="typeVehicle">
			<type name="org.hibernate.type.EnumType">
                <param name="enumClass">model.TypeVehicle</param>
                <param name="useNamed">true</param>
            </type>
		</property>
		<property name="capacity" />
		<property name="description" />
		<property name="photo" length='10000000'/>
		<property name="location" />
		<property name="phoneNumber" />
		<property name="addressToDrop" />
		<property name="addressToPickUp" />
		<list name="reservations" lazy="false">
			<key column="reservationID" />
			<list-index column="id" />
			<one-to-many class="model.Reservation" />
		</list>
		<list name="rents" lazy="false">
			<key column="rentID" />
			<list-index column="id" />
			<one-to-many class="model.Rent" />
		</list>
		
    <many-to-one name="creator" 
        class="model.User" 
        column="user_id"
        lazy="false"
        not-null="true"/> 
        	</class>
</hibernate-mapping>